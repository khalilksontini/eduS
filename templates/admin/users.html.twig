{% extends 'base.html.twig' %}

{% block title %}Liste des Utilisateurs{% endblock %}

{% block body %}
<div class="user-list-container">
    <h1 class="page-title">Gestion des Utilisateurs</h1>

    <div class="table-wrapper">
        <table class="user-table">
            <thead>
                <tr>
                    <th class="column-id">ID</th>
                    <th class="column-email">Email</th>
                    <th class="column-name">Nom</th>
                    <th class="column-roles">Rôles</th>
                    <th class="column-actions">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.name }}</td>
                    <td><div class="role-badge">{{ user.roles|join('</div><div class="role-badge">')|raw }}</div></td>
                    <td>
                        <a href="{{ path('admin_user_detail', {'id': user.id}) }}" class="detail-link">
                            <svg class="icon" viewBox="0 0 24 24" width="18" height="18">
                                <path d="M12 9a3 3 0 0 0-3 3a3 3 0 0 0 3 3a3 3 0 0 0 3-3a3 3 0 0 0-3-3m0 8a5 5 0 0 1-5-5a5 5 0 0 1 5-5a5 5 0 0 1 5 5a5 5 0 0 1-5 5m0-12.5C7 4.5 2.7 7.6 1 12c1.7 4.4 6 7.5 11 7.5s9.3-3.1 11-7.5c-1.7-4.4-6-7.5-11-7.5z"/>
                            </svg>
                            Détails
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr class="no-results">
                    <td colspan="5">
                        <div class="empty-state">
                            <svg class="empty-icon" viewBox="0 0 24 24" width="48" height="48">
                                <path d="M12 5a7 7 0 0 0-7 7c0 2.4 1.1 4.5 2.8 5.9L12 21.5l4.2-3.6c1.7-1.4 2.8-3.5 2.8-5.9a7 7 0 0 0-7-7m0 2a5 5 0 0 1 5 5c0 1.6-.7 3.1-1.9 4.2L12 18.5l-3.1-2.7C7.7 15.1 7 13.6 7 12a5 5 0 0 1 5-5m0 2a3 3 0 0 0-3 3a3 3 0 0 0 3 3a3 3 0 0 0 3-3a3 3 0 0 0-3-3z"/>
                            </svg>
                            Aucun utilisateur trouvé
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>

<style>
.user-list-container {
    max-width: 1200px;
    margin: 40px auto;
    padding: 0 20px;
}

.page-title {
    font-size: 28px;
    color: #2c3e50;
    margin-bottom: 30px;
    font-weight: 600;
    letter-spacing: -0.5px;
}

.table-wrapper {
    border: 1px solid #eaeff5;
    border-radius: 12px;
    background: white;
    overflow: hidden;
    box-shadow: 0 10px 30px rgba(50,50,93,.05), 0 5px 15px rgba(0,0,0,.05);
}

.user-table {
    width: 100%;
    border-collapse: collapse;
    font-size: 14px;
}

.user-table th {
    background-color: #f8fafd;
    color: #64748b;
    font-weight: 600;
    text-transform: uppercase;
    font-size: 12px;
    letter-spacing: 0.5px;
    padding: 16px 24px;
    border-bottom: 2px solid #f1f5f9;
}

.user-table td {
    padding: 18px 24px;
    color: #334155;
    border-bottom: 1px solid #f1f5f9;
}

.user-table tr:last-child td {
    border-bottom: none;
}

.user-table tr:hover td {
    background-color: #f8fafd;
}

.role-badge {
    display: inline-flex;
    background: #f1f5f9;
    color: #475569;
    padding: 4px 10px;
    border-radius: 20px;
    font-size: 12px;
    margin: 2px;
    white-space: nowrap;
}

.detail-link {
    display: inline-flex;
    align-items: center;
    color: #3b82f6;
    text-decoration: none;
    font-weight: 500;
    transition: color 0.2s;
}

.detail-link:hover {
    color: #2563eb;
    text-decoration: underline;
}

.detail-link .icon {
    margin-right: 8px;
    fill: currentColor;
}

.no-results td {
    padding: 40px 20px;
    text-align: center;
}

.empty-state {
    display: flex;
    flex-direction: column;
    align-items: center;
    color: #94a3b8;
    font-size: 16px;
}

.empty-icon {
    fill: #cbd5e1;
    margin-bottom: 16px;
}

@media (max-width: 768px) {
    .user-table th,
    .user-table td {
        padding: 12px 15px;
    }
    
    .page-title {
        font-size: 24px;
    }
}
</style>
{% endblock %}