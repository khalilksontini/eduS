{% extends 'base.html.twig' %}

{% block title %}Modifier le cours{% endblock %}

{% block stylesheets %}
<style>
    .course-edit-container {
        max-width: 800px;
        margin: 2rem auto;
        padding: 0 20px;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
    
    .course-edit-title {
        color: #2c3e50;
        margin-bottom: 1.5rem;
        padding-bottom: 0.5rem;
        border-bottom: 2px solid #f39c12;
    }
    
    .form-group {
        margin-bottom: 1.5rem;
    }
    
    .form-label {
        display: block;
        margin-bottom: 0.5rem;
        font-weight: 600;
        color: #2c3e50;
    }
    
    .form-control {
        width: 100%;
        padding: 0.75rem;
        border: 1px solid #ddd;
        border-radius: 4px;
        font-size: 1rem;
        transition: border-color 0.3s;
    }
    
    .form-control:focus {
        border-color: #f39c12;
        outline: none;
        box-shadow: 0 0 0 2px rgba(243, 156, 18, 0.2);
    }
    
    textarea.form-control {
        min-height: 150px;
        resize: vertical;
    }
    
    .btn-update {
        background-color: #f39c12;
        color: white;
        padding: 0.75rem 1.5rem;
        border: none;
        border-radius: 4px;
        font-size: 1rem;
        cursor: pointer;
        transition: background-color 0.3s;
    }
    
    .btn-update:hover {
        background-color: #e67e22;
    }
    
    .btn-back {
        background-color: #95a5a6;
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 4px;
        text-decoration: none;
        display: inline-block;
        margin-top: 1.5rem;
        transition: background-color 0.3s;
    }
    
    .btn-back:hover {
        background-color: #7f8c8d;
    }
    
    .form-errors {
        color: #e74c3c;
        margin-top: 0.5rem;
        font-size: 0.9rem;
    }
</style>
{% endblock %}

{% block body %}
<div class="course-edit-container">
    <h2 class="course-edit-title">Modifier le cours</h2>
    
    {{ form_start(form) }}
        <div class="form-group">
            {{ form_label(form.title) }}
            {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.title) }}
        </div>
        
        <div class="form-group">
            {{ form_label(form.description) }}
            {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.description) }}
        </div>
        
        <button type="submit" class="btn-update">{{ button_label|default('Mettre à jour') }}</button>
    {{ form_end(form) }}
    
    <a href="{{ path('admin_courses') }}" class="btn-back">← Retour à la liste</a>
</div>
{% endblock %}