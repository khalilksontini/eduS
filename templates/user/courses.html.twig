{% extends 'base.html.twig' %}

{% block title %}Gestion des Cours{% endblock %}

{% block stylesheets %}
<style>
    .course-list-container {
        max-width: 1200px;
        margin: 2rem auto;
        padding: 0 20px;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
    
    .course-list-title {
        color: #2c3e50;
        margin-bottom: 1.5rem;
        padding-bottom: 0.5rem;
        border-bottom: 2px solid #3498db;
    }
    
    .course-table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 2rem;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }
    
    .course-table th {
        background-color: #2c3e50;
        color: white;
        padding: 12px;
        text-align: left;
    }
    
    .course-table td {
        padding: 12px;
        border-bottom: 1px solid #ecf0f1;
    }
    
    .course-table tr:nth-child(even) {
        background-color: #f8f9fa;
    }
    
    .course-table tr:hover {
        background-color: #e8f4fc;
    }
    
    .btn-action {
        padding: 0.5rem 0.8rem;
        border-radius: 4px;
        text-decoration: none;
        font-size: 0.9rem;
        margin-right: 0.5rem;
        display: inline-block;
        transition: background-color 0.3s;
    }
    
    .btn-details {
        background-color: #3498db;
        color: white;
    }
    
    .btn-start {
        background-color: #27ae60;
        color: white;
    }
    
    .btn-details:hover {
        background-color: #2980b9;
    }
    
    .btn-start:hover {
        background-color: #2ecc71;
    }
    
    .no-courses {
        background-color: #fff3cd;
        color: #856404;
        padding: 1rem;
        border-radius: 4px;
        border-left: 4px solid #ffeeba;
        margin-bottom: 1.5rem;
    }
    
    .back-button {
        display: inline-block;
        margin-bottom: 1.5rem;
        color: #3498db;
        text-decoration: none;
        font-weight: 500;
    }
    
    .back-button:hover {
        text-decoration: underline;
    }
</style>
{% endblock %}

{% block body %}
<div class="course-list-container">
    

    <h2 class="course-list-title">Liste des Cours</h2>

    {% if courses is empty %}
        <div class="no-courses">Aucun cours trouvé.</div>
    {% else %}
        <table class="course-table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Titre</th>
                    <th>Description</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for course in courses %}
                    <tr>
                        <td>{{ course.id }}</td>
                        <td>{{ course.title }}</td>
                        <td>{{ course.description|slice(0, 100) ~ '...' }}</td>
                        <td>
                            <a href="{{ path('app_course_show_u', {id: course.id}) }}" class="btn-action btn-details">Voir détails</a>
                            <a href="{{ path('user_start_course', {id: course.id}) }}" class="btn-action btn-start">Commencer</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}
</div>
{% endblock %}